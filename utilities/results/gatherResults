#!/usr/bin/python
__author__ = 'kmacarenco'

import json
import os
import argparse
import re

parser = argparse.ArgumentParser(description='To get test folder path')
parser.add_argument('-r', dest='resultsLoc', type=str, help='Results folder location', required=True)

args = parser.parse_args()


resultDict = {}


print "Gathering Results"

#For example results are in ../results/ep/...
tests = os.listdir(args.resultsLoc) #list of folder in ../results/..
for test in tests:
    if test.startswith("."):
        continue
    resultsDirPath = args.resultsLoc + "/" + test + "/"
    files = os.listdir(resultsDirPath) 
    resultDict[test] = {}
    count = 1
    for f in files:
        if f.startswith("."):
            continue
        resultDict[test][count] = {}
        with open(currentPath + "/" + f, 'r') as result:
            for line in result:
                l = line.strip()
                l = re.sub(r'[ ]*=[ ]*', '=', l)
                a = l.split("=")
                if len(l.split("=")) == 2:
                    s = a[0]
                    s = re.sub(r'  ', '', s)
                    s = re.sub(r'  ', '', s)
                    s = re.sub(r'[.]', '', s)
                    s = re.sub(r' |[/]', '_', s)
                    s = s.upper()
                    rs = re.sub(r'  ', '', a[1])
                    resultDict[test][count][s] = rs;
        if len(resultDict[test][count]) == 0:
            del resultDict[test][count]
            count -= 1
        count += 1
    count = 1

outfile = 'data.txt'
try:
    os.remove(outfile)
except OSError:
    pass

with open(outfile, 'w') as outfile:
    json.dump(resultDict, outfile)

